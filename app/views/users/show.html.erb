<% provide(:title, @user.name)   %>
<div class="row">
  <aside class="span4">
    <section>
        <%= render 'shared/user_info' %>
      </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
  	<%= render "follow_form" if signed_in? %>
    <% if @user.microposts.any? %>
      <h3 id="microposts_count">Microposts (<%= @user.microposts.count %>)</h3>
      <ol id="feeds">
        <%= render partial: "shared/feed_item", collection: @microposts %>
      </ol>
    <% end %>
    <%= will_paginate @microposts %>
  </div>
</div>