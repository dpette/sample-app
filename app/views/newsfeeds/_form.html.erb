<%= form_for(@newsfeed, remote: true) do |f| %>
  <div id="errors">
    <%= render 'shared/error_messages', object: f.object %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, rows: "4" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary", value: "Create New"%>
  </div>
<% end %>